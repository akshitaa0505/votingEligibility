#include<iostream>
using namespace std;

int main() {
    int age;
    int year;
    cout << "Enter year of birth: ";
    cin >> year;
    age = 2021-year;

    cout << "\nYou are " << age << " years old.";

    if (age >= 18){
        cout << "\nYou are eligible to vote";
    }
    else {
        cout << "\nYou are not eligible to vote";
        cout << "\nYou have to wait for " << 18-age << " years to vote.";
    }

    return 0;


}
